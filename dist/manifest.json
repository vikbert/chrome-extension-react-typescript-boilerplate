{
  "manifest_version": 2,

  "name": "Chrome extension template V1.0 @xzhou",
  "description": "Chrome template build with Typescript + React",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },

  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["cookies", "<all_urls>", "tabs"]
}
